{
  "name": "web3-ipfs-solidity",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --build \"tsconfig.prod.json\"",
    "start-dev": "ts-node --esm src/index.ts",
    "start": "node ./dist/src/index.js",
    "test": "mocha --require ts-node/register ./test/**/**/*.test.ts --silent",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "test:main": "mocha --require ts-node/register test/src/**/*.test.ts",
    "test:ipfsstorage": "mocha --require ts-node/register test/contracts/**/*.test.ts",
    "test:ipfsupload": "mocha --require ts-node/register test/lib/**/*.test.ts"
  },
  "author": {
    "name": "Luka Racki",
    "url": "https://github.com/lukaracki"
  },
  "license": "MIT",
  "dependencies": {
    "bn.js": "^5.2.1",
    "fs-extra": "^11.1.1",
    "ipfs": "^0.66.0",
    "ipfs-http-client": "^60.0.0",
    "ipfsd-ctl": "^13.0.0",
    "web3": "1.9.0",
    "ganache": "^7.8.0",
    "web3-core": "^1.9.0",
    "web3-eth-contract": "^1.9.0",
    "web3-utils": "^1.9.0",
    "yargs": "^17.7.1"
  },
  "keywords": [
    "blockchain",
    "web3",
    "ethereum",
    "smart-contracts",
    "solidity",
    "ipfs",
    "typescript"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
